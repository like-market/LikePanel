<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="shortcut icon" type="image/png" href="/images/favicon.png"/>
    <link href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900' rel='stylesheet' type='text/css'>

    <!-- Page title -->
    <title>LikeMarket | Накрутка лайков</title>

    <!-- Vendor styles -->
    <link rel="stylesheet" href="vendor\fontawesome\css\font-awesome.css">
    <link rel="stylesheet" href="vendor\animate.css\animate.css">
    <link rel="stylesheet" href="vendor\bootstrap\css\bootstrap.css">
    <link rel="stylesheet" href="vendor\toastr\toastr.min.css">

    <!-- App styles -->
    <link rel="stylesheet" href="styles\pe-icons\pe-icon-7-stroke.css">
    <link rel="stylesheet" href="styles\pe-icons\helper.css">
    <link rel="stylesheet" href="styles\stroke-icons\style.css">
    <link rel="stylesheet" href="styles\style.css">

    <%- include('YandexMetrika'); %>
    <%- include('Chatra', { user }); %>
</head>
<body>

<!-- Wrapper-->
<div class="wrapper">

    <!-- Header-->
     <%- include('header', { user }); %>
    <!-- End header-->

    <!-- Navigation-->
    <%- include('navigation', {user, page: 'admin'}); %>
    <!-- End navigation-->


    <!-- Main content-->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="view-header">
                        <div class="header-icon">
                            <i class="pe page-header-icon pe-7s-shield"></i>
                        </div>
                        <div class="header-title">
                            <h3 class="m-b-xs">Админка</h3>
                            <small>
                                Основная статистика и функции сайта
                            </small>
                        </div>
                    </div>
                    <hr>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-filled">
                        <div class="panel-body">
                            <h4> Проверка комментариев</h4>

                            <div class="row">
                                <div class="col-lg-6">

                                </div>
                            </div>
                            <div class="row">
                                <div id="comments-id" style="display: none;">0</div>
                                <div class="col-lg-8">
                                    <div class="form-group">
                                        <textarea id="comments-text" disabled class="form-control" rows="6" placeholder="Чтобы загрузить комментарии нажмите на кнопку 'Следующий'"></textarea>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <p>Автор: <span style="color: #FFFFFF" id="comments-author"></span></p>
                                    <p>Количество: <span style="color: #FFFFFF" id="comments-count"></span></p>
                                    <p>Создан: <span style="color: #FFFFFF" id="comments-date"></span></p>
                                    <div style="text-align: left;">
                                        <button class="btn btn-danger" onclick="setStatus('reject');">Отклонить</button>
                                        <button class="btn btn-success" onclick="setStatus('accept');">Потведрить</button>
                                        <button class="btn btn-info" onclick="next();">Следующий</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="panel panel-filled">
                        <div class="panel-body">
                            <h4> Добавить аккаунты вк</h4>
                            <div class="form-group">
                                <textarea id="accounts" class="form-control" rows="3" placeholder="Строки в формате login:password"></textarea>
                            </div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-4">
                                    <a id="add-account" class="btn btn-w-md btn-accent" style="align: center">Добавить</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="panel panel-filled">
                        <div class="panel-body">
                            <h4> Пополнить баланс</h4>

                            <div class="form-group">
                                <p>Логин пользователя</p>
                                <input type="text" class="form-control" id="username" placeholder="Логин">
                            </div>

                            <div class="form-group">
                                <p>Тип операции</p>
                                <select id="operation-type" class="form-control">
                                    <option value="add">Добавить
                                    <option value="spend">Отнять
                                </select>
                            </div>
                            <div class="form-group">
                                <p>Количество рублей</p>
                                <input type="number" class="form-control" id="money-count" placeholder="1.00" step="0.01">
                            </div>
                            <div class="form-group">
                                <div class="col-md-6 col-md-offset-4">
                                <a id="change-balance" class="btn btn-w-md btn-accent" style="align: center">Пополнить</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- End main content-->

</div>
<!-- End wrapper-->

<!-- Vendor scripts -->
<script src="vendor\pacejs\pace.min.js"></script>
<script src="vendor\jquery\dist\jquery.min.js"></script>
<script src="vendor\bootstrap\js\bootstrap.min.js"></script>
<script src="vendor\toastr\toastr.min.js"></script>
<script src="vendor\sparkline\index.js"></script>
<script src="vendor\flot\jquery.flot.min.js"></script>
<script src="vendor\flot\jquery.flot.resize.min.js"></script>
<script src="vendor\flot\jquery.flot.spline.js"></script>
<script src="vendor\flot\jquery.flot.time.js"></script>

<!-- App scripts -->
<script src="scripts\luna.js"></script>
<script src="scripts\admin.js"></script>

</body>

</html>