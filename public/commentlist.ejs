<tr>
    <th>Статус</th>
    <th>Название</th>
    <th>Количество</th>
    <th class="text-right">Действия</th>
</tr>
</thead>
<tbody>


<% /**
    * Вывод данных у таблицы с наборами комментариев
    * @param comments [object] - список наоборов комментариев
    * @param moment [module] - модуль для работы со временем
    */ %>
<% comments.forEach(function(comment) { %>
    <tr>
        <td>
            <% if (comment.status == 'accept') { %>
                <span class="label label-success">Проверено</span>
            <% }else if (comment.status == 'checking') { %>
                <span class="label label-accent">Проверяется</span>            
            <% }else if (comment.status == 'reject') { %>
                <span class="label label-danger">Отклонено</span>
            <% } %>
        </td>
        <td>
            <a href="#"><%= comment.name %></a>
            <div class="small"><i class="fa fa-clock-o"></i>
                Добавлены <%= moment(comment.create).format("D MMMM YYYY") %>
            </div>
        </td>
        <td>
            <%= comment.count %>
        </td>
        <td>
            <div class="btn-group pull-right">
                <button class="btn btn-default btn-xs" onclick="editComments(<%= comment.id %>, <%= comment.owner_id %>);">
                    <i class="fa fa-pencil"></i> Редактировать
                </button>
                <button class="btn btn-danger btn-xs" onclick="deleteComments(<%= comment.id %>, <%= comment.owner_id %>);">
                    <i class="fa fa-trash"></i> Удалить
                </button>
            </div>
        </td>
    </tr>
<% }); %>